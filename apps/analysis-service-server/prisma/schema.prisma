datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Analysis {
  analysisType EnumAnalysisAnalysisType?
  createdAt    DateTime                  @default(now())
  document     Document?                 @relation(fields: [documentId], references: [id])
  documentId   String?
  id           String                    @id @default(cuid())
  result       String?
  updatedAt    DateTime                  @updatedAt
}

model Document {
  analyses  Analysis[]
  createdAt DateTime   @default(now())
  filePath  String?
  id        String     @id @default(cuid())
  name      String?
  updatedAt DateTime   @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumAnalysisAnalysisType {
  Option1
}
